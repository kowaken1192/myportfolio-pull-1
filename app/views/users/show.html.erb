<section class="section">
  <div class="user-container">
    <h3 class="title">ユーザー詳細</h3>

    <figure class="image is-128x128 mb-6">
      <h3 class="subtitle is-5 mb-2">アイコン画像</h3>
      <% if @user.image? %>
        <%= image_tag @user.image.url%>
      <% else %>
        <%= image_tag 'https://rails-02-sample.herokuapp.com/assets/common/default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png', class: 'is-rounded' %>
      <% end %>
    </figure>

    <table class="table is-fullwidth is-hoverable mt-5">
      <tbody>
        <tr>
          <th>名字</th>
          <td><%= @user.first_name %></td>
        </tr>
        <tr>
          <th>名前</th>
          <td><%= @user.last_name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>自己紹介</th>
          <td><%= @user.profile %></td>
        </tr>
      </tbody>
    </table>

    <div class="buttons mt-5">
      <%= link_to "ユーザー編集", edit_user_path(current_user), class: 'button is-primary' %>
    </div>
  </div>
</section>
