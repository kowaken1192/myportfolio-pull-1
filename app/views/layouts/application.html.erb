<!DOCTYPE html>
<html>

<head>
  <title>Myapp</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script src="https://kit.fontawesome.com/484e6509e8.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="body-padding">
  <header class="fixed-header">
    <% if user_signed_in? %>
      <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
          <%= link_to "https://johobase.com/", class: "navbar-item" do %>
          <% end %>
          <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="menu">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>

        <div id="menu" class="navbar-menu">
          <div class="navbar-start">
            <%= link_to "投稿一覧", destroy_user_session_path, class: "navbar-item" %>
            <%= link_to "レビュー一覧", "#", class: "navbar-item" %>
          </div>

          <div class="navbar-end">
            <div class="navbar-item has-dropdown is-hoverable">
              <%= link_to "#{current_user.first_name} #{current_user.last_name}", "#", class: "navbar-link" %>
              <div class="navbar-dropdown is-right">
                <%= link_to "お問い合わせ", "#", class: "navbar-item" %>
                <%= link_to "ユーザー情報", "#", class: "navbar-item" %>
                <hr class="navbar-divider">
                <%= link_to "ログアウト", destroy_user_session_path, class: "navbar-item" %>
                <%= link_to "退会", "#", class: "navbar-item" %>
              </div>
            </div>
          </div>
        </div>
      </nav>
    <% else %>
      <%= link_to "ホーム", profile_index_path %> |
      <%= link_to "新規登録", new_user_registration_path %> |
      <%= link_to "ログイン", new_user_session_path %>
    <% end %>
  </header>

  <main>
    <%= yield %>
  </main>

  <% if user_signed_in? %>
    <footer class="footer">
      <div class="content has-text-centered">
        <nav class="level">
          <div class="level-item has-text-centered">
            <%= link_to "ホーム", posts_index_path %>
          </div>
          <div class="level-item has-text-centered">
            <%= link_to "投稿する", new_post_path %>
          </div>
          <div class="level-item has-text-centered">
            <%= link_to "検索画面", "#" %>
          </div>
          <div class="level-item has-text-centered">
            <%= link_to "お気に入り", "#" %>
          </div>
          <div class="level-item has-text-centered">
            <%= link_to "マイページ", "#" %>
          </div>
        </nav>
      </div>
    </footer>
  <% end %>
</body>

</html>
