<section class="section">
  <div class="review-container">
    <div class="columns is-centered">
      <div class="column is-half">
        <p class="is-size-4 mb-3 has-text-centered">口コミを書く</p>
        <%= render "shared/error", obj: @review %>

        <%= form_with model: @review, url: post_reviews_path(@post), local: true do |f| %>
          <div class="main-rating">
            <div class="ratings mb-3 has-text-centered">
              <span class="fa fa-star-o" id="star"></span>
              <span class="fa fa-star-o" id="star"></span>
              <span class="fa fa-star-o" id="star"></span>
              <span class="fa fa-star-o" id="star"></span>
              <span class="fa fa-star-o" id="star"></span>
            </div>
            <div class="ml-3 rating-value-display has-text-centered">
              <span id="rating-value-display">0</span>/5
            </div>
          </div>
          
          <%= f.hidden_field :post_id, value: @post.id %>
          <%= f.hidden_field :score, id: "rating-value" %>

          <div class="field">
            <%= f.label :タイトル, class: "label" %>
            <%= f.text_field :title, placeholder: 'ずっと楽しみにしていた清水寺', class: "input textfield" %>
          </div>

          <div class="field">
            <%= f.label :感想, class: "label" %>
            <%= f.text_area :content, placeholder: 'ずっと行きたかった建築物を見ることができて大満足です!', class: "textarea" %>
          </div>

          <div class="field">
            <label class="label">画像</label>
            <div class="control">
              <%= f.file_field :review_image %>
            </div>
          </div>

          <div class="buttons">
            <%= f.submit "保存", class: "button mt-3" %>
            <%= link_to "他のレビューを見る", post_path(@post), class: "button light ml-3 mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<%= javascript_include_tag 'reviews.js' %>
